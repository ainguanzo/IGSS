<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="300dp"
android:layout_height="450dp"
tools:context=".AddDrink">

    <Button
        android:id="@+id/xbutton2"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="16dp"
        android:onClick="cancel"
        android:text="X"
        android:textColor="#FFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="108dp"
        android:layout_height="103dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/round_button"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:onClick="addNewDrink"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whisky" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="106dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/round_button"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:onClick="addNewDrink"
        android:padding="18dp"
        android:scaleType="centerInside"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shot" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="107dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/round_button"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:onClick="addNewDrink"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beer" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="109dp"
        android:layout_height="102dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/round_button"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:onClick="addNewDrink"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wine" />

    <Button
        android:id="@+id/button3"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="48dp"
        android:onClick="addCustomDrink"
        android:text="Add Custom Drink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
